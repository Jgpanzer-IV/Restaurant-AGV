<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantAGV.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/elements.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RestaurantAGV.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white navbarStyle">
            <div class="container">
                
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/icons/salad.png" width="60" height="60">
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-between">
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-area="" asp-controller="Customer" asp-action="Menu">Menu</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Customer" asp-action="Basket">Basket</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Order" asp-action="OrderStatus">Order status</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Customer" asp-action="Billing">Check Bill</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Admin" asp-action="ReceiverOrder">Review Order</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Admin" asp-action="AGVStatus">AGV Status</a>
                        </li>
                        <li class="nav-item my-1">
                            <a class="navMenu" asp-controller="Admin" asp-action="ReserveTable">Reserve Table</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RestaurantAGV.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
