@model RestaurantAGV.MVC.Models.Admin.CustomerInfoModel

@{}

<article>
    <header>
        <div class="colorBackgroundII p-5">
            <h1 class="mainTitleFont colorFontIII text-center">Customer Information</h1>
        </div>
    </header>

    <div class="container">
        <div class="row my-5">

            <div class="col-md">
                <h4 class="mainTitleFont text-center my-3" style="font-size: 28px;">Customer</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Customer ID</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Customer?.Id</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Check in Time</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Customer?.TimeCheckIn.ToShortDateString()</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Check out Time</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Customer?.TimeCheckOut?.ToShortDateString()</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Billing Done</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@((Model.Customer?.BillingDone ?? false)? "Yes":"No" )</span>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>

            <div class="col-md">
                <h4 class="mainTitleFont text-center my-3" style="font-size: 28px;">Basket</h4>
                
                 <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Basket ID</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Basket?.Id</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Ordered menu's number</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block"></span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Current Order's Price</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block"></span>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
        <div class="row my-5">
            <div class="col-md"> 

                <h4 class="mainTitleFont text-center my-3" style="font-size: 28px;">Table</h4>
                 <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Table ID</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Table?.Id</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Table Address</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Table?.Address</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Table's Number</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Table?.NumberTable</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Chair Quantity</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Table?.ChairQuantity</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Reserved By</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.Customer?.Id</span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="col-md">
                <h4 class="mainTitleFont text-center my-3" style="font-size: 28px;">Billing</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Billing Id</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.BillOrder?.Id</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Billing Time</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.BillOrder?.BillingTime</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Order Quantity</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@Model.BillOrder?.CountingOrder</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">7% Vat Price</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@(Model.BillOrder?.VatPrice?.ToString("C"))</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Order Price</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@(Model.BillOrder?.VatPrice?.ToString("C"))</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-between">
                            <div class="col">
                                <span class="text-start w-100 d-inline-block">Discount</span>
                            </div>
                            <div class="col">
                                <span class="text-end w-100 d-inline-block">@(Model.BillOrder?.Discount?.ToString("C"))</span>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <strong>
                            <div class="row justify-content-between">
                                <div class="col">
                                    <span class="text-start w-100 d-inline-block">Total Price</span>
                                </div>
                                <div class="col">
                                    <span class="text-end w-100 d-inline-block">@(Model.BillOrder?.TotalPrice?.ToString("C"))</span>
                                </div>
                            </div>
                        </strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</article>