@model RestaurantAGV.MVC.Models.Admin.AGVStatusModel

<div class="container">
    <h1 class="mainTitleFont text-center my-5">AGV Status</h1>
    <div class="d-flex flex-row flex-wrap justify-content-center">
        @if (Model.AGVsStatus != null)
        {
            @foreach (var item in Model.AGVsStatus)
            {

                // AGV Card
                <button type="button" class="cardPopUp" data-bs-toggle="modal" data-bs-target="#@(item.CodeName)">
                    <partial name="assets/_AGVCard" model="item"></partial>
                </button>

                // Agv Modal
                <div class="modal fade" id="@(item.CodeName)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="p-5">
                                    <h6 class="text-center subTitleFont">AGV @item.CodeName</h6>
                                    <form method="get" class="my-4">
                                        <select name="agvId" class="form-select">
                                            <option title="Table 01" value="42">Table 01</option>
                                            <option title="Table 01" value="56">Table 02</option>
                                            <option title="Table 01" value="75">Table 03</option>
                                            <option title="Table 01" value="89">Table 04</option>
                                        </select>
                                        <input type="hidden" name="agvId" value="@item.Id">
                                        <button type="submit" class=" mt-3 btn mainBtn w-100">Done</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>